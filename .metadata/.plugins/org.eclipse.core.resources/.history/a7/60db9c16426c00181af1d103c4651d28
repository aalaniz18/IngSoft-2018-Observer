import java.util.ArrayList;
import java.util.Date;

public abstract class Compra {
	
	//private Producto p;
	private ArrayList<Producto> carrito;
	private double total;
	//private FormaPago f;
	private Codigo c;
	
	public Compra(){
		total= 0.0;
		lista = new ArrayList<Producto>();
		c=new Codigo("0");
	}
	
	/* El parametro i es el orden de casillero elegido por el usuario. Supongo primero a Entrada
	 * segundo a Comida y tercero a Merchandising. */
	public void agregarProducto(int i, Producto p){
		if(i==1){
			lista.add(new Entrada());
		}
		if(i==2||i==3){
			lista.add(new Merchandising());
		}
	}
	
	public void setCodigo(String a){
		c.setCode(a);
	}
	
	public String getCod(){
		return c.getCode();
	}
	
	public Date getTime(){
		return c.getInicio();
	}
	
	public void startValido(){
		c.iniciar();
	}
	

}
